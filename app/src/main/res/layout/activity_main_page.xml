<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abcd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.co.eloquence.newfirebase.Homescreen"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/mainpage_checkcrop"
        android:padding="7dp"/>

    <ImageView
        android:id="@+id/random"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mainpage_news"
        android:visibility="invisible"
        android:layout_above="@+id/agriNews"
        android:layout_toLeftOf="@+id/imgView"
        android:layout_toStartOf="@+id/imgView" />

    <ImageView
        android:id="@+id/agriMart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:src="@drawable/mainpage_agrimart"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgView"
        android:layout_toEndOf="@+id/imgView" />

    <ImageView
        android:id="@+id/diseaseCheck"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mainpage_checkdisease"
        android:visibility="invisible"
        android:layout_above="@+id/agriMart"
        android:layout_toRightOf="@+id/cropCheck"
        android:layout_toEndOf="@+id/cropCheck" />

    <ImageView
        android:id="@+id/buynsell"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mainpage_sell"
        android:visibility="invisible"
        android:layout_above="@+id/random"
        android:layout_toLeftOf="@+id/cropCheck"
        android:layout_toStartOf="@+id/cropCheck" />

    <ImageView
        android:id="@+id/agriNews"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mainpage_news"
        android:visibility="invisible"
        android:layout_below="@+id/agriMart"
        android:layout_alignLeft="@+id/diseaseCheck"
        android:layout_alignStart="@+id/diseaseCheck" />

    <ImageView
        android:id="@+id/cropCheck"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mainpage_checkcrop"
        android:visibility="invisible"
        android:layout_above="@+id/imgView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/helpline"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mainpage_helpline"
        android:visibility="invisible"
        android:layout_below="@+id/random"
        android:layout_toLeftOf="@+id/abtDev"
        android:layout_toStartOf="@+id/abtDev" />

    <ImageView
        android:id="@+id/abtDev"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mainpage_helpline"
        android:visibility="invisible"
        android:layout_below="@+id/imgView"
        android:layout_alignLeft="@+id/cropCheck"
        android:layout_alignStart="@+id/cropCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tap The Icon To Explore"
        android:id="@+id/tv"
        android:textStyle="bold"
        android:textColor="#FF656363"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>